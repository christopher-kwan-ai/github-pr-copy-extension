{
  "manifest_version": 3,
  "name": "GitHub PR Copy for Slack",
  "version": "1.0.0",
  "description": "Copy GitHub PR title and URL as markdown link for Slack",
  "permissions": ["activeTab", "clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "copy-pr-link": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Copy PR title and URL to clipboard"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
